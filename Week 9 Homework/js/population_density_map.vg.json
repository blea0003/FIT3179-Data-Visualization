{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Population Density (people/sq.km)",
    "width":800,
    "height":400,
    "projection": {"type":"equalEarth"},
    "layer": [
        {
            "data": {
                "graticule": {"step": [30,30]}
            },
            "mark": {
                "stroke": "lightgrey",
                "type": "geoshape"
            }
        },
        {
            "data": {
                "url": "ne_50m_admin_0_countries.json",
                "format": {"type": "topojson", "feature": "ne_50m_admin_0_countries"}
            },     
            "transform": [
                {
                    "lookup": "properties.ISO_A3",
                    "from": {
                        "data":{
                            "url": "../data/Global Population Density (WorldBank).csv"
                        },
                        "key": "Country Code",
                        "fields": ["2020"]
                    }
                }
            ],  
            "mark": {
                "type": "geoshape"
            },
            "encoding": {
                "color":{
                    "field": "2020",
                    "type": "quantitative",
                    "scale": {"type": "log"}
                },
                "tooltip": [
                    {"field": "properties.NAME", "type":"nominal", "title": "Name"},
                    {"field": "2020", "type": "quantitative", "title": "Density"}
                ]
            }
        },
        {
            "data": {
                "url": "ne_50m_urban_areas.json",
                "format": {"type": "topojson", "feature": "ne_50m_urban_areas"}
            },      
            "mark": {
                "type": "geoshape",
                "fill": "red"
            }
        }       
    ]
}